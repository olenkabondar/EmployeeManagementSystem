@{
    ViewData["Title"] = "Реєстрація";
}

<h2>Реєстрація</h2>

<form method="post">
    <div>
        <label>Логін</label>
        <input type="text" name="username" required />
    </div>
    <div>
        <label>Пароль</label>
        <input type="password" name="password" required />
    </div>
    <button type="submit">Зареєструватися</button>
</form>

<p style="color:red">@ViewBag.Error</p>
