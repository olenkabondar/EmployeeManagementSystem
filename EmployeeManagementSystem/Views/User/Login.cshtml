@{
    ViewData["Title"] = "Вхід";
}

<a asp-action="Login">Вхід</a> | <a asp-action="Register">Реєстрація</a>

<form method="post">
    <div>
        <label>Логін</label>
        <input type="text" name="username" required />
    </div>
    <div>
        <label>Пароль</label>
        <input type="password" name="password" required />
    </div>
    <button type="submit">Увійти</button>
</form>

<p style="color:red">@ViewBag.Error</p>
