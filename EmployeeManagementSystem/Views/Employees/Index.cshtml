@model IEnumerable<EmployeeManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Список працівників";
    var today = DateTime.Now;
    var nextMonth = today.AddMonths(1);
}

<h2>Список працівників</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Додати працівника</a>
</p>

<table class="table table-bordered table-hover text-center align-middle">
    <thead style="background-color: #f8f9fa;">
        <tr>
            <th>Ім’я</th>
            <th>Прізвище</th>
            <th>Відділ</th>
            <th>Посада</th>
            <th>Дата завершення контракту</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            string rowStyle = "";

            if (employee.ContractEnd < today)
            {
                rowStyle = "background-color: #f8d7da;"; // червоний
            }
            else if (employee.ContractEnd >= today && employee.ContractEnd <= nextMonth)
            {
                rowStyle = "background-color: #fff3cd;"; // жовтий
            }

            <tr style="@rowStyle">
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Department?.Name</td>
                <td>@employee.Position?.Name</td>
                <td>@employee.ContractEnd.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-primary">Редагувати</a>
                    <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-sm btn-info">Деталі</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Назад</a>

<!-- 🟩 Легенда -->
<div class="mt-3">
    <span style="display:inline-block; width:20px; height:20px; background-color:#f8d7da; border:1px solid #000;"></span>
    — Контракт закінчився<br>
    <span style="display:inline-block; width:20px; height:20px; background-color:#fff3cd; border:1px solid #000;"></span>
    — Контракт закінчується протягом місяця
</div>

