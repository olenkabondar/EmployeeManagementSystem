<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Management System</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@
</head>
<body>
    <div class="container">
        <header class="my-3">
            <h1>Employee Management System</h1>
            <nav>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Головна</a>
                <a asp-controller="Departments" asp-action="Index" class="btn btn-secondary">Відділи</a>
                <a asp-controller="Positions" asp-action="Index" class="btn btn-secondary">Посади</a>
                <a asp-controller="Employees" asp-action="Index" class="btn btn-secondary">Співробітники</a>
            </nav>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted mt-3">
        <div class="container">
            &copy; 2025 - Employee Management System
        </div>
    </footer>

    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>


